        &lt;span class=&quot;n&quot;&gt;move&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;(&lt;/span&gt;&lt;span class=&quot;n&quot;&gt;point&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;)&lt;/span&gt;
