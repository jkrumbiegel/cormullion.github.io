        &lt;span class=&quot;n&quot;&gt;boxtopcenter&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;(&lt;/span&gt;&lt;span class=&quot;n&quot;&gt;BoundingBox&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;()),&lt;/span&gt;
        &lt;span class=&quot;n&quot;&gt;boxmiddlecenter&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;(&lt;/span&gt;&lt;span class=&quot;n&quot;&gt;BoundingBox&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;()),&lt;/span&gt;
