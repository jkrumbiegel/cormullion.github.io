        &lt;span class=&quot;n&quot;&gt;boxbottomcenter&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;(&lt;/span&gt;&lt;span class=&quot;n&quot;&gt;BoundingBox&lt;/span&gt;&lt;span class=&quot;x&quot;&gt;()),&lt;/span&gt;
